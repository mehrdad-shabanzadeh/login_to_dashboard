<h3 class="mt-2">Tips and a chart about covid-19</h3>
<p>Chart info from "https://api.thevirustracker.com/free-api?countryTimeline=ir"</p>

<div class="row d-flex mt-4">
	<div class="card col-md-4 p-0 mx-auto">
		<div class="card-header">Tasks</div>
		<ul class="list-group list-group-flush">
			<% tasks.forEach(task => { %>
			<li class="list-group-item"><%= task %></li>
			<% }) %>
		</ul>
	</div>
	<div class="card col-md-7 mx-auto">
		<canvas id="myChart" width="600" height="200"></canvas>
	</div>
</div>
<!-- ===================================================== -->

<div class="card col-md-12 p-0 mt-4">
	<div id="carouselExampleInterval" class="carousel slide" data-ride="carousel">
		<div class="carousel-inner">
			<div class="carousel-item active" data-interval="10000">
				<img src="https://via.placeholder.com/1920x500?text=First+Slilde" class="d-block w-100" alt="https://via.placeholder.com/1920x500?text=First+Slilde" />
			</div>
			<div class="carousel-item" data-interval="2000">
				<img src="https://via.placeholder.com/1920x500?text=Second+Slilde" class="d-block w-100" alt="https://via.placeholder.com/1920x500?text=Second+Slilde" />
			</div>
			<div class="carousel-item">
				<img src="https://via.placeholder.com/1920x500?text=Third+Slilde" class="d-block w-100" alt="https://via.placeholder.com/1920x500?text=Third+Slilde" />
			</div>
		</div>
		<a class="carousel-control-prev" href="#carouselExampleInterval" role="button" data-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="sr-only">Previous</span>
		</a>
		<a class="carousel-control-next" href="#carouselExampleInterval" role="button" data-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="sr-only">Next</span>
		</a>
	</div>
</div>
